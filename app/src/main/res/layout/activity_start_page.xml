<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.ginkgo.StartPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="@string/Welcome"
        android:textColor="#100F0F"
        android:textStyle="bold" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo"
        tools:srcCompat="@drawable/logo" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/fm"
        tools:srcCompat="@drawable/fm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50px"
        android:layout_marginRight="20dp"
        android:enabled="false"
        android:paddingTop="20px"
        android:text="@string/introducation"
        android:textColor="#100F0F"
        android:textSize="18dp" />


    <Button
        android:id="@+id/letsStart"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shap_buttens"
        android:fontFamily="sans-serif"
        android:text="@string/letsStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18dp" />


</LinearLayout>